@page "/"
@inject INyckel nyckel

<PageTitle>Nyckel - Home</PageTitle>

<h1>Information</h1>

<hr />

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                Number of records
            </div>
            <div class="card-body">
                <h1 style="font-size: 48pt">
                    @nyckel.Count()
                </h1>
            </div>
        </div>
    </div>

    <div class="col-4">
        <div class="card">
            <div class="card-header">
                Cache Type
            </div>
            <div class="card-body">
                <h1 style="font-size: 48pt">
                    @Config.Backend().Name
                </h1>
            </div>
        </div>
    </div>

</div>